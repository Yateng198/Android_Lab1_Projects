<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/output_celsius_text_view"
        android:layout_width="319dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        android:hint="@string/output_celsius_text_view"
        app:layout_constraintEnd_toEndOf="@+id/input_fahrenheit_edit_text"
        app:layout_constraintStart_toStartOf="@+id/input_fahrenheit_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/input_fahrenheit_edit_text" />

    <EditText
        android:id="@+id/input_fahrenheit_edit_text"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/input_fahrenheit_edit_text"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/temperature_conversion_text_view"
        app:layout_constraintStart_toStartOf="@+id/temperature_conversion_text_view"
        app:layout_constraintTop_toBottomOf="@+id/temperature_conversion_text_view" />

    <TextView
        android:id="@+id/temperature_conversion_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature_conversion_text_view"
        android:textAlignment="center"
        android:textColor="#6200ED"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <Button
        android:id="@+id/convert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert_button"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/output_celsius_text_view"
        app:layout_constraintStart_toStartOf="@+id/output_celsius_text_view"
        app:layout_constraintTop_toBottomOf="@+id/output_celsius_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>